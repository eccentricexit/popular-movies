<resources>

    <!--//TODO Refactor themes taking into account v21-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/TextAppearance.Raleway</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/TextAppearance.Raleway</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--TODO Fix weird behaviour on statusbar (scroll up and then down to see the effect)-->
        <!--TODO Make status bar transparent. Perhaps using https://github.com/jgilfelt/SystemBarTint-->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="TextAppearance.Raleway" parent="android:TextAppearance">
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
    </style>

    <style name="TextAppearance.Raleway.Toolbar" parent="TextAppearance.AppCompat.Title.Inverse">
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:color">@color/primary_light</item>
    </style>

    <style name="Toolbar" parent="AppTheme.NoActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.Raleway.Toolbar</item>
    </style>


</resources>
