<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
    android:id="@+id/activity_discovery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context="com.deltabit.popularmovies.MainActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_recycler_main_activity"
        />

        <LinearLayout
            android:id="@+id/item_no_data_available"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:text="@string/ellipsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="132sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="-70dp"
                android:layout_marginBottom="-20dp" />
            <TextView
                android:text="@string/no_data_available_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:layout_marginBottom="50dp" />

        </LinearLayout>


</FrameLayout>
</layout>