<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cLayout_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_rating_label"
            android:textSize="@dimen/title_size"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/release_date_label"
            app:layout_constraintLeft_toLeftOf="@+id/release_date_label" />

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/materialRatingBar_movie_detail"
            style="@style/Widget.MaterialRatingBar.RatingBar"
            android:isIndicator="true"
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:numStars="5"
            android:rating="3"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rating_label" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/release_date_label"
            android:textSize="@dimen/paragraph_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/paragraph_size"
            app:layout_constraintLeft_toRightOf="@+id/release_date_label"
            app:layout_constraintTop_toTopOf="@+id/release_date_label"
            tools:text="25/01/1975" />

        <View
            android:id="@+id/view_separator_plot"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/rating_label"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_height="1dp" />


        <TextView
            android:id="@+id/textview_plot_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/plot_label"
            android:textSize="@dimen/title_size"
            app:layout_constraintLeft_toLeftOf="@+id/release_date_label"
            app:layout_constraintTop_toBottomOf="@+id/view_separator_plot" />

        <TextView
            android:id="@+id/textview_plot_moviedetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/paragraph_size"
            tools:text="@string/lorem_ipsum"
            app:layout_constraintTop_toBottomOf="@+id/textview_plot_label"
            app:layout_constraintLeft_toLeftOf="@+id/textview_plot_label"
            app:layout_constraintRight_toRightOf="@+id/materialRatingBar_movie_detail"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <View
            android:id="@+id/view_separator_trailers"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="@color/accent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_plot_moviedetails"
            app:layout_constraintLeft_toLeftOf="@+id/view_separator_plot"
            app:layout_constraintRight_toRightOf="@+id/view_separator_plot" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view_separator_trailers"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:id="@+id/cardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_margin="16dp"
                android:text="@string/trailers_label"
                android:textSize="@dimen/paragraph_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_height="145dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/view_separator_reviews"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:background="@color/accent"
            app:layout_constraintLeft_toLeftOf="@+id/view_separator_trailers"
            app:layout_constraintRight_toRightOf="@+id/view_separator_trailers"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.0" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view_separator_reviews"
            app:layout_constraintLeft_toLeftOf="@+id/cardView"
            app:layout_constraintRight_toRightOf="@+id/cardView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintVertical_bias="0.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:layout_margin="16dp"
                    android:text="@string/reviews_label"
                    android:textSize="@dimen/paragraph_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:layout_height="145dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</layout>